<script id="team" type="text/x-handlebars-template">
{{#each teams}}
<div class="row contact-row" id="teams-row">
  <li class="team-element">
      <div class="span2">
        <h3 class="team-header">{{name}}</h3>
        <p class="team-description">{{desc}}</p>
        {{#if acheivements}}
        <h6>Acheivements</h6>
        {{/if}}
        <ul class="acheivements">
          {{#each acheivements}}
            <li><img class="acheivement" src="http://upload.wikimedia.org/wikipedia/commons/c/ce/Transparent.gif"><a>{{name}}</a></img></li>
          {{else}}
          <h6>No acheivements</h6>
          {{/each}}
        </ul>
      </div>
      <div class="span3">
      <h5>Games</h5>
      <ul class="games-list">
      {{#each games}}
        <li><a href="/teams/{{../name}}/{{name}}"><i class="game-icon icon-play"></i>{{name}}
        {{#unless played}}
        <span class="not-played">(Not played)</span>
        {{/unless}}
        </a></li>
      {{else}}
        <a>No games</a>
      {{/each}}
      </ul>
      </div>
  </li>

    <div class="span2 btn-group">
        <button class="btn btn-small btn-success" id="add-game">Add game</button>
        <button class="btn btn-small btn-inverse" id="remove-team" value="{{name}}">Delete team</button>
    </div>
    <div class="span2">
    <button style="margin-top: 20px" class="btn btn-info btn-small" value="{{_id}}" id="show-stats">Team progress</button>
    </div>
    <div class="span7">
        <div class="" id="{{_id}}-container" style="height: 200px"></div>
    </div>

</div>
{{else}}
<h3>No teams created</h3>
{{/each}}
</script>